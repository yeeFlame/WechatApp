/* pages/index/index.wxss */
text {
    font-style: normal;
}
.banner {
    height: 100px;
    background: lightblue;
}
.addAsset {
    height: 100px;
    background: #FFF5E4;
}
.hot_sale {
    height: 108px;
    border: 1px solid #B57A1E;
}
.current {
    height: 18px;
    position: relative;
}
.current_top {
    width: 4px;
    height: 18px;
    background: #CFA767;
    position: absolute;
    left: 0;
    top: 0;
    z-index: 1;
}
.current_text {
    position: absolute;
    left: 19px;
    top: 0px;
    z-index: 2;
}
.current_text_style {
    color: #CFA767;
    font-size: 18px;
}
.current_product {
    padding-top: 18px;
    padding-left: 19px;
    padding-bottom: 18px;
}
.current_product_title {
    padding-bottom: 18px;
}
.text_color {
    color: #4A4A4A;
    font-size: 18px;
}
.current_product_bottom {
    position: relative;
}
.current_product_left {
    position: absolute;
    left: 0;
}
.current_product_right {
    position: absolute;
    right: 20%;
}
.rate_style {
    font-size: 28px;
    color: #FB4653;
}
.current_product_left_text {
    color: #4A4A4A;
    font-size: 14px;
}
.current_product_right_view {
    border: 1px solid #7E919F;
    border-radius: 2px;
    padding: 1px;
    text-align: center;
    vertical-align: center;
    width: fit-content;
}
.current_product_right_title {
    color: #7E919F;
    font-size: 14px;
}
.current_product_right_bottom {
    padding-top: 11px;
}